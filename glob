import glob
#######################################################
#하위 파일 전체 탐색
output = glob.glob('dir/**', recursive=True)

#######################################################
# 폴더 내 txt 파일 탐색
output = glob.glob('dir/*.txt')
# 폴더 하위 1단계 파일 탐색
output = glob.glob('dir/**/*.txt')

#######################################################
# 비슷한 파일명을 가지는 파일 탐색
>>> output = glob.glob('dir/file?.*')
